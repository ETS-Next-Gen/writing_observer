{
    "ignoreFiles": [
        "./**/node_modules/**",
        "./**/deps/**",
        "./**/build/**",
        "./**/3rd_party/**",
        "./extension/**"
    ],
    "extends": "stylelint-config-standard",
    "customSyntax": "postcss-scss",
    "plugins": [
        "stylelint-scss"
    ],
    "rules": {
        "at-rule-no-unknown": null,
        "scss/at-rule-no-unknown": true
    }
}